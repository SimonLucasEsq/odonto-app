<%= form_with(model: [@work_order, @work_order_item], class: "space-y-4", data: { turbo_frame: "new_work_order_item_form" }) do |form| %>
  <% if @work_order_item.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 px-3 py-2 rounded">
      <p class="font-semibold">Revisa los datos:</p>
      <ul class="list-disc list-inside text-sm">
        <% @work_order_item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :article_id, "Artículo", class: "block text-sm font-medium text-slate-700 mb-1" %>
    <%= form.collection_select :article_id, Article.order(:name), :id, :name, { prompt: "Selecciona un artículo" }, class: "w-full rounded-lg border-slate-200 focus:border-indigo-400 focus:ring-indigo-200" %>
  </div>

  <div>
    <%= form.label :quantity, "Cantidad", class: "block text-sm font-medium text-slate-700 mb-1" %>
    <%= form.number_field :quantity, min: 1, step: 1, class: "w-full rounded-lg border-slate-200 focus:border-indigo-400 focus:ring-indigo-200", placeholder: "Ej: 5" %>
  </div>

  <div class="flex items-center justify-between">
    <%= form.submit (@work_order_item.new_record? ? "Agregar" : "Guardar"), class: "bg-indigo-600 hover:bg-indigo-700 text-white font-semibold px-4 py-2 rounded-lg shadow" %>
    <% if @work_order_item.persisted? %>
      <%= link_to "Cancelar", work_order_path(@work_order), class: "text-sm text-slate-600" %>
    <% end %>
  </div>
<% end %>
