    <div class="flex item-center justify-center">
      <% if work_order_item.persisted? %>
        <%= link_to "Editar", edit_work_order_work_order_item_path(work_order, work_order_item), data: { turbo_frame: "new_work_order_item_form" }, class: "text-indigo-700 text-sm font-semibold" %>
        <%= link_to "Eliminar", [work_order, work_order_item], method: :delete, data: { turbo_confirm: "Â¿Seguro?", turbo_frame: "work_order_items" }, class: "text-red-600 text-sm font-semibold" %>
      <% end %>
    </div>
  </td>
</tr>
