<tr id="<%= dom_id work_order_item %>" class="border-b border-gray-200 hover:bg-gray-100">
  <td class="py-3 px-6 text-left whitespace-nowrap">
    <div class="flex items-center">
      <span class="font-medium"><%= work_order_item.article&.name || "N/A" %></span>
    </div>
  </td>
  <td class="py-3 px-6 text-left">
    <div class="flex items-center">
      <span><%= work_order_item.quantity %></span>
    </div>
  </td>
