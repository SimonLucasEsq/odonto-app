<div class="mx-auto md:w-2/3 w-full">
  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <% if notice.present? %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
        <span class="block sm:inline"><%= notice %></span>
      </div>
    <% end %>

    <h1 class="font-bold text-4xl mb-4">Work Order Item #<%= @work_order_item.id %></h1>

    <div class="mb-4">
      <p class="block text-gray-700 text-sm font-bold mb-2">Work Order ID:</p>
      <p class="text-gray-900 leading-tight"><%= @work_order.id %></p>
    </div>

    <div class="mb-4">
      <p class="block text-gray-700 text-sm font-bold mb-2">Article:</p>
      <p class="text-gray-900 leading-tight"><%= @work_order_item.article.name %></p>
    </div>

    <div class="mb-4">
      <p class="block text-gray-700 text-sm font-bold mb-2">Quantity:</p>
      <p class="text-gray-900 leading-tight"><%= @work_order_item.quantity %></p>
    </div>

    <div class="flex items-center justify-between mt-6">
      <%= link_to "Edit this work order item", edit_work_order_work_order_item_path(@work_order, @work_order_item), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      <%= link_to "Back to work order items", work_order_work_order_items_path(@work_order), class: "inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" %>
      <%= button_to "Destroy this work order item", [@work_order, @work_order_item], method: :delete, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline", data: { turbo_confirm: "Are you sure?" } %>
    </div>
  </div>
</div>
