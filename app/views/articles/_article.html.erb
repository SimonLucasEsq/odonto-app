<tr id="<%= dom_id article %>" class="border-b border-gray-200 hover:bg-gray-100">
  <td class="py-3 px-6 text-left whitespace-nowrap">
    <div class="flex items-center">
      <span class="font-medium"><%= article.name %></span>
    </div>
  </td>
  <td class="py-3 px-6 text-left">
    <div class="flex items-center">
      <span><%= article.price %></span>
    </div>
  </td>
  <td class="py-3 px-6 text-center">
    <div class="flex item-center justify-center">
      <%= link_to "Show", article, class: "w-4 mr-2 transform hover:text-purple-500 hover:scale-110" %>
      <%= link_to "Edit", edit_article_path(article), class: "w-4 mr-2 transform hover:text-purple-500 hover:scale-110" %>
      <%= link_to "Destroy", article, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "w-4 mr-2 transform hover:text-purple-500 hover:scale-110 text-red-600" %>
    </div>
  </td>
</tr>
