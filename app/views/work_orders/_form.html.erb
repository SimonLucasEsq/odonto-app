<div class="bg-gradient-to-br from-indigo-50 via-white to-cyan-50 shadow-md rounded-2xl p-4 border border-slate-200">
  <h2 class="font-semibold text-lg mb-3"><%= @work_order.new_record? ? "Crear orden" : "Editar orden" %></h2>

  <%= form_with(model: @work_order, class: "space-y-4", data: { turbo_frame: "form_update" }) do |form| %>
    <% if @work_order.errors.any? %>
      <div class="bg-red-50 border border-red-200 text-red-700 px-3 py-2 rounded">
        <p class="font-semibold">Revisa los datos:</p>
        <ul class="list-disc list-inside text-sm">
          <% @work_order.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :status, "Estado", class: "block text-sm font-medium text-slate-700 mb-1" %>
      <%= form.select :status, WorkOrder.statuses.keys.map { |s| [s.humanize, s] }, {}, class: "w-full rounded-lg border-slate-200 focus:border-indigo-400 focus:ring-indigo-200" %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit (@work_order.new_record? ? "Crear" : "Guardar cambios"), class: "bg-indigo-600 hover:bg-indigo-700 text-white font-semibold px-4 py-2 rounded-lg shadow" %>
      <% if @work_order.persisted? %>
        <%= link_to "Ver", @work_order, class: "text-indigo-700 text-sm" %>
      <% end %>
    </div>
  <% end %>
</div>
