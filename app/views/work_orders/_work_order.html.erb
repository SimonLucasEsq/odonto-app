<tr id="<%= dom_id work_order %>" class="border-b border-gray-200 hover:bg-gray-100">
  <td class="py-3 px-6 text-left whitespace-nowrap">
    <div class="flex items-center">
      <span class="font-medium"><%= work_order.id %></span>
    </div>
  </td>
  <td class="py-3 px-6 text-left">
    <div class="flex items-center space-x-2">
      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-semibold bg-indigo-50 text-indigo-700 capitalize">
        <%= work_order.status %>
      </span>
    </div>
  </td>
  <td class="py-3 px-6 text-center">
    <div class="flex item-center justify-center">
      <%= link_to "Show", work_order, class: "w-4 mr-2 transform hover:text-purple-500 hover:scale-110" %>
      <%= link_to "Edit", edit_work_order_path(work_order), class: "w-4 mr-2 transform hover:text-purple-500 hover:scale-110" %>
      <%= link_to "Destroy", work_order, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "w-4 mr-2 transform hover:text-purple-500 hover:scale-110 text-red-600" %>
    </div>
  </td>
</tr>
