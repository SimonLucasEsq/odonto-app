<div class="mx-auto md:w-2/3 w-full">
  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <% if notice.present? %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
        <span class="block sm:inline"><%= notice %></span>
      </div>
    <% end %>

    <div class="flex items-center justify-between gap-4 mb-6">
      <div>
        <p class="text-sm text-slate-500">Orden #<%= @work_order.id %></p>
        <h1 class="font-bold text-4xl mb-2">Detalle</h1>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-indigo-50 text-indigo-700 capitalize">
          <%= @work_order.status %>
        </span>
      </div>
      <div class="flex items-center gap-2">
        <%= link_to "Editar", edit_work_order_path(@work_order), class: "bg-indigo-600 hover:bg-indigo-700 text-white font-semibold px-3 py-2 rounded-lg" %>
        <%= link_to "Volver", work_orders_path, class: "text-indigo-700 font-semibold" %>
        <%= button_to "Eliminar", @work_order, method: :delete, class: "bg-red-500 hover:bg-red-600 text-white font-semibold px-3 py-2 rounded-lg", data: { turbo_confirm: "¿Seguro?" } %>
      </div>
    </div>

    <div class="grid md:grid-cols-2 gap-6">
      <%= turbo_frame_tag "work_order_items" do %>
        <div class="bg-white shadow-md rounded-2xl border border-slate-200">
          <div class="px-4 py-3 border-b border-slate-200 flex items-center justify-between">
            <h2 class="font-semibold text-lg">Ítems</h2>
            <span class="text-sm text-slate-500"><%= @work_order.work_order_items.count %> artículos</span>
          </div>
          <div class="overflow-x-auto">
            <table class="min-w-max w-full table-auto">
              <thead>
                <tr class="bg-slate-50 text-slate-600 uppercase text-xs leading-normal">
                  <th class="py-3 px-6 text-left">Artículo</th>
                  <th class="py-3 px-6 text-left">Cantidad</th>
                  <th class="py-3 px-6 text-center">Acciones</th>
                </tr>
              </thead>
              <tbody class="text-slate-700 text-sm font-light divide-y">
                <%= render @work_order.work_order_items, work_order: @work_order %>
              </tbody>
            </table>
          </div>
        </div>
      <% end %>

      <div id="form_update">
        <%= turbo_frame_tag "new_work_order_item_form" do %>
          <div class="bg-white shadow-md rounded-2xl border border-slate-200 p-4">
            <h2 class="font-semibold text-lg mb-2">Agregar ítem</h2>
            <%= render "work_order_items/form", work_order: @work_order, work_order_item: @work_order_item %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
